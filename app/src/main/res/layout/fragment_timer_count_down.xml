<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.hydra.android.timecycle.TimerExerciseFragment">

    <!-- TODO: Re-do hardcoded values -->
    <LinearLayout
        android:id="@+id/linearLayout_countdownTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_countdownTime_title_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:text="Countdown Time"
            style="@style/TimerTitlesFont"/>

        <TextView
            android:id="@+id/textView_setCountdownTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="70sp"
            android:layout_marginTop="60dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:id="@+id/linearLayout_countdownTime_plusButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_countdownTime_plus1sec"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/round_button"
                android:text="+1 sec"
                android:textColor="@android:color/holo_green_light"
                android:textAllCaps="false"
                android:gravity="center"/>

            <Button
                android:id="@+id/button_countdownTime_plus5sec"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/round_button"
                android:text="+5 sec"
                android:textColor="@android:color/holo_green_light"
                android:textAllCaps="false"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_countdownTime_minusButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_countdownTime_minus1sec"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/round_button"
                android:text="-1 sec"
                android:textColor="@android:color/holo_red_dark"
                android:textAllCaps="false"
                android:gravity="center"/>

            <Button
                android:id="@+id/button_countdownTime_minus5sec"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/round_button"
                android:text="-5sec"
                android:textColor="@android:color/holo_red_dark"
                android:textAllCaps="false"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
