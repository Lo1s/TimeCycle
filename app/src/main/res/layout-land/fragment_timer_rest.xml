<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.hydra.android.timecycle.timerplan.TimerRestFragment">

    <!-- TODO: Re-do hardcoded values -->

    <LinearLayout
        android:id="@+id/linearLayout_restTime"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_restTime_title_tab"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Rest Time"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            style="@style/TimerTitlesFont"/>

        <TextView
            android:id="@+id/textView_setRestTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:00:00,0"
            android:textSize="70sp"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_restTime_plusButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="40dp"
        android:layout_toLeftOf="@id/linearLayout_restTime"
        android:layout_alignBaseline="@id/linearLayout_restTime"
        android:clipToPadding="false"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_restTime_plus1min"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_button"
            android:text="+1 min"
            android:textColor="@android:color/holo_green_light"
            android:textAllCaps="false"
            android:gravity="center"/>

        <Button
            android:id="@+id/button_restTime_plus10min"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_button"
            android:text="+10 min"
            android:textColor="@android:color/holo_green_light"
            android:textAllCaps="false"
            android:gravity="center"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_restTime_plusButtons2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="40dp"
        android:clipToPadding="false"
        android:layout_toLeftOf="@id/linearLayout_restTime_plusButtons"
        android:layout_alignBaseline="@id/linearLayout_restTime"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_restTime_plus30sec"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/round_button"
            android:text="+30 sec"
            android:textColor="@android:color/holo_green_light"
            android:textAllCaps="false"
            android:gravity="center" />

        <Button
            android:id="@+id/button_restTime_plus5min"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_button"
            android:text="+5 min"
            android:textColor="@android:color/holo_green_light"
            android:textAllCaps="false"
            android:gravity="center"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_restTime_minusButtons"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/linearLayout_restTime"
        android:layout_marginTop="40dp"
        android:layout_alignBaseline="@id/linearLayout_restTime"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_restTime_minus30sec"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_button"
            android:text="-30 sec"
            android:textColor="@android:color/holo_red_dark"
            android:textAllCaps="false"
            android:gravity="center"/>

        <Button
            android:id="@+id/button_restTime_minus5min"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/round_button"
            android:layout_marginBottom="10dp"
            android:text="-5 min"
            android:textColor="@android:color/holo_red_dark"
            android:textAllCaps="false"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_restTime_minusButtons2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@id/linearLayout_restTime_minusButtons"
        android:layout_alignBaseline="@id/linearLayout_restTime"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_restTime_minus1min"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_button"
            android:text="-1 min"
            android:textColor="@android:color/holo_red_dark"
            android:textAllCaps="false"
            android:gravity="center"/>

        <Button
            android:id="@+id/button_restTime_minus10min"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_button"
            android:text="-10 min"
            android:textColor="@android:color/holo_red_dark"
            android:textAllCaps="false"
            android:gravity="center"/>

    </LinearLayout>


</RelativeLayout>